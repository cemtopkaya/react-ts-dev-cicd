{
  "name": "react-diff",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "------CLEAN": "---------------------------------------------------------",
    "clean:tests": "rimraf test-results coverage playwright-report",
    "clean:dist": "rimraf dist",
    "clean": "run-p clean:*",
    "-------TEST": "---------------------------------------------------------",
    "test": "vitest --run --reporter verbose --config ./vitest.config.ts",
    "test:coverage": "vitest run --coverage",
    "--------E2E": "---------------------------------------------------------",
    "e2e:start": "docker-compose -f docker/docker-compose.e2e.yml up -d",
    "e2e:test": "playwright test --config=tests/config/playwright.config.ts --reporter=dot",
    "e2e:stop": "docker-compose -f docker/docker-compose.e2e.yml down",
    "e2e": "npm run e2e:start && sleep 5 && npm run e2e:test && npm run e2e:stop",
    "-------RUN": "---------------------------------------------------------",
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "-------SONAR": "---------------------------------------------------------",
    "sonar:cicd": "dotenv -e .env.cicd -e .env -- sonar-scanner -Dproject.settings=./sonar-cicd.properties",
    "sonar:local": "dotenv -e .env.local -e .env -- sonar-scanner -Dproject.settings=./sonar-local.properties --debug"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^3.1.2",
    "@vitest/coverage-istanbul": "^3.1.2",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1",
    "vitest": "^3.1.2"
  }
}
