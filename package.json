{
  "name": "react-diff",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "------CLEAN": "---------------------------------------------------------",
    "clean:tests": "rimraf test-results coverage playwright-report",
    "clean:dist": "rimraf dist",
    "clean": "run-p clean:*",
    "-------TEST": "---------------------------------------------------------",
    "test": "npx vitest --config ./vitest.config.ts",
    "test:run:basic": "npm run test -- --run --coverage=false",
    "test:run:coverage": "npm run test -- --run --coverage=true",
    "test:ui": "npm run test -- --ui --api.host=0.0.0.0 --api.port=8999",
    "test:ui:basic": "npm run test:ui -- --coverage=false",
    "test:ui:coverage": "npm run test:ui -- --coverage=true",
    "----------": "---------------------------------------------------------",
    "test:watch:basic": "npm run test -- --watch --coverage=false",
    "test:watch:coverage": "npm run test -- --watch --coverage=true",
    "test:watch:ui:basic": "npm run test:ui -- --watch --coverage=false",
    "test:watch:ui:coverage": "npm run test:ui -- --watch --coverage=true",
    "-----------": "---------------------------------------------------------",
    "test:dir:ui": "npm run test:ui -- --dir ./src/components",
    "test:changed": "npm run test:run:basic -- --changed",
    "test:changed:ui": "npm run test:ui:basic --changed",
    "------------": "---------------------------------------------------------",
    "test:verbose": "npm run test:run:basic -- --reporter=verbose",
    "test:junit": "npm run test:run:basic -- --reporter=junit --outputFile=test-results/unit/junit/output.xml",
    "test:html": "npm run test:run:basic -- --reporter=html --outputFile=test-results/unit/html/output.html",
    "test:json": "npm run test:run:basic -- --reporter=json --outputFile=test-results/unit/json/output.json",
    "---COVERAGE": "---------------------------------------------------------",
    "test:run:coverage:html": "npm run test:run:coverage -- --reporter=html --outputFile=test-results/coverage/output.html",
    "test:ui:coverage:html": "npm run test:ui:coverage -- --reporter=html --outputFile=test-results/coverage/output.html",
    "coverage:newcode": "diff-cover coverage/lcov.info --html-report=diff-cover.html --compare-branch=main  --fail-under=90",
    "test:run:coverage:newcode": "npm run test:run:coverage && npm run coverage:newcode",
    "--------E2E": "---------------------------------------------------------",
    "e2e:start": "docker-compose -f docker/docker-compose.e2e.yml up -d",
    "e2e:test": "playwright test --config=tests/config/playwright.config.ts --reporter=dot",
    "e2e:stop": "docker-compose -f docker/docker-compose.e2e.yml down",
    "e2e": "npm run e2e:start && sleep 5 && npm run e2e:test && npm run e2e:stop",
    "-------RUN": "---------------------------------------------------------",
    "dev": "npx vite --config ./vite.config.ts",
    "build": "npm run dev -- build --outDir dist",
    "preview": "npm run build && npm run dev -- preview --outDir dist",
    "lint": "eslint .",
    "-------SONAR": "---------------------------------------------------------",
    "sonar": "sonar-scanner -Dproject.settings=sonar-project.properties",
    "sonar:local": "npx dotenv -e .env.local -e .env -- sonar-scanner -Dproject.settings=sonar-local.properties --debug",
    "sonar:cicd": "npx dotenv -e .env.cicd -e .env -- sonar-scanner -Dproject.settings=sonar-cicd.properties -Dsonar.typescript.eslint.skip=true -Dsonar.javascript.eslint.skip=true -X"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^3.1.2",
    "@vitest/coverage-istanbul": "^3.1.2",
    "@vitest/ui": "^3.1.2",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1",
    "vitest": "^3.1.2"
  }
}
